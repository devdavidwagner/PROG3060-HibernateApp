<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Configuration DTD//EN"
	"http://hibernate.org/dtd/hibernate-configuration.dtd">
	
	<hibernate-configuration>
		<session-factory>
			<property name="hibernate.connection.driver_class">
			org.apache.derby.jdbc.ClientDriver
			</property>
			<property name="hibernate.connection.url">
			jdbc:derby://localhost:1527/G:/CanadaCensusDB
			</property>
			<property name="hibernate.connection.username">
			dwet
			</property>
			<property name="hibernate.connection.password">
			password123
			</property>
			<property name="hibernate.connection.pool_size">
			10
			</property>
			<property name="show_sql">
			true
			</property>
			<property name="hibernate.default_schema">
			APP
			</property>
			<property name="hibernate.dialect">
			org.hibernate.dialect.DerbyTenSevenDialect
			</property>
			
			<mapping resource="Age.hbm.xml"/>
			<mapping resource="AgeGroup.hbm.xml"/>
			<mapping resource="CensusYear.hbm.xml"/>
			<mapping resource="GeographicArea.hbm.xml"/>
		</session-factory>
	
	</hibernate-configuration>